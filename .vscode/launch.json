    "version": "0.2.0",
    "configurations": [
        {
            "name": "PowerShell: Launch Script",
            "type": "PowerShell",
            "request": "launch",
            "script": "Enter path or command to execute, for example: \"${workspaceFolder}/src/foo.ps1\" or \"Invoke-Pester\"",
            "args": []
        },
        {
            "name": "debug streamlit",
            "type": "python",
            "request": "launch",
            "program": "C:\\ProgramData\\anaconda3\\Lib\\site-packages\\streamlit",
            "args": [
                "run",
                "main4.py"
            ]
        },
        {
            "name": "Debug Streamlit (.venv)", // Renamed for clarity
            "type": "python",
            "request": "launch",
            // "program": "C:\\ProgramData\\anaconda3\\Lib\\site-packages\\streamlit", // --- DELETE OR COMMENT OUT THIS LINE ---
            "module": "streamlit", // --- ADD THIS LINE --- Run 'python -m streamlit' essentially
            "args": [
                "run",
                "main.py"
                // You can add other Streamlit arguments here if needed, like:
                // "--server.port", "8501"
            ],
            "console": "integratedTerminal" // Shows output in VS Code's integrated terminal
        },
        {
            "name": "Python: Attach Remote",
            "type": "python",
            "request": "attach",
            "connect": {
                "host": "localhost",
                "port": 8501
            },
            "justMyCode": true // Set to false if you want to debug into library code
        }
    ]
}